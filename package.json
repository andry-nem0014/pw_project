{
  "name": "playwright-nem",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Andry Nem",
  "main": "index.js",
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "packages/**/src/**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc src/**/*.ts --check src/",
    "prettier:fix": "prettier --config .prettierrc src/**/*.ts --write src/",
    "format": " npm run prettier && npm run lint",
    "format:fix": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky",
    "test:ui": "npx playwright test",
    "ui-mode": "npx playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "lint-staged": "^16.2.3",
    "lodash": "^4.17.21"
  }
}
